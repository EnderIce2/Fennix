# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[.github/**]
indent_style = space
indent_size = 2

[{CMakeLists.txt,*.cmake}]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
