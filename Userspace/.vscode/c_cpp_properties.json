{
	"configurations": [
		{
			"name": "Fennix x64 (Linux, GCC, debug)",
			"includePath": [
				"${workspaceFolder}/libc/include/**",
				"${workspaceFolder}/coreutils/include/**",
				"${workspaceFolder}/libs/include/**",
				"${workspaceFolder}/out/include/**"
			],
			"defines": [
				"__debug_vscode__",
				"DEBUG=\"1\""
			],
			"forcedInclude": [
				"${workspaceFolder}/.vscode/preinclude.h"
			],
			"compilerPath": "${workspaceFolder}/../tools/cross/bin/x86_64-fennix-gcc",
			"cStandard": "c17",
			"cppStandard": "c++20",
			"intelliSenseMode": "gcc-x64",
			"configurationProvider": "ms-vscode.makefile-tools",
			"compilerArgs": [
				// Compiler flags
				"-fPIC",
				"-fPIE",
				"-pie",
				"-march=x86-64",
				"-pipe",
				"-ffunction-sections",
				"-fno-builtin",
				// C++ flags
				"-fexceptions",
				// Linker flags
				"-fPIC",
				"-fPIE",
				"-pie",
				"-nostdlib",
				"-nodefaultlibs",
				"-nolibc",
				"-zmax-page-size=0x1000",
				"-static",
				// VSCode flags
				"-ffreestanding",
				"-nostdinc",
				"-nostdinc++"
			]
		},
