{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/include/**"
            ],
            "defines": [
                "__debug_vscode__",
                "KERNEL_NAME=\"Fennix\"",
                "KERNEL_VERSION=\"1.0\"",
                "GIT_COMMIT=\"0000000000000000000000000000000000000000\"",
                "GIT_COMMIT_SHORT=\"0000000\"",
                "DEBUG=\"1\""
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools",
            "compilerArgs": [
                // "-m32",
                "-mcmodel=kernel", /* 64-bit only */
                "-fno-rtti",
                "-fexceptions",
                "-fno-pic",
                "-fno-pie",
                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow",
                "-mno-red-zone",
                "-mno-sse",
                "-mno-sse2",
                "-march=nehalem",
                "-pipe",
                "-msoft-float",
                "-fno-builtin",
                "-ffreestanding",
                "-nostdinc",
                "-Wl,-static,--no-dynamic-linker,-ztext",
                "-shared",
                "-zmax-page-size=0x1000",
                "-nostdinc++"
            ]
        }
    ],
    "version": 4
}