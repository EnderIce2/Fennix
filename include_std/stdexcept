#pragma once

#include <assert.h>

namespace std
{
	class runtime_error
	{
	private:
		const char *m_what;

	public:
		runtime_error(const char *what_arg) : m_what(what_arg) {}
		const char *what() const { return this->m_what; }
	};

	class out_of_range
	{
	public:
		out_of_range(const char *what_arg)
		{
			/* FIXME: This is a temporary assert */
			assert(what_arg != nullptr);
		}
	};
}
