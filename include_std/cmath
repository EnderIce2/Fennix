#pragma once

namespace std
{
	double sin(double x)
	{
		const int NUM_TERMS = 10;

		double result = 0.0;
		double term = x;

		for (int i = 1; i <= NUM_TERMS; ++i)
		{
			result += term;
			term *= -x * x / ((2 * i) * (2 * i + 1));
		}

		return result;
	}
}
