#pragma once

#include <types.h>
#include <memory/physical.hpp>
#include <memory/macro.hpp>

extern Memory::Physical KernelAllocator;

template <typename T>
class auto_page
{
private:
	T *PhysicalAddress;
	size_t Pages;

public:
	auto_page() : Pages(TO_PAGES(sizeof(T)))
	{
		PhysicalAddress = (T *)KernelAllocator.RequestPages(Pages);
	}

	auto_page(size_t Size) : Pages(TO_PAGES(Size))
	{
		PhysicalAddress = (T *)KernelAllocator.RequestPages(Pages);
	}

	~auto_page()
	{
		KernelAllocator.FreePages((void *)PhysicalAddress, Pages);
	}

	operator T *() { return PhysicalAddress; }
	operator void *() { return static_cast<void *>(PhysicalAddress); }
	T *operator->() { return PhysicalAddress; }
	T *operator*() { return PhysicalAddress; }
	T &operator[](size_t Index) { return PhysicalAddress[Index]; }
	size_t size() { return FROM_PAGES(Pages); }

	template <typename U>
	U *as() { return reinterpret_cast<U *>(PhysicalAddress); }
};
